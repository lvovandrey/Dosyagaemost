<UserControl x:Class="DosyagWpf.Views.PropertyViewerFloatLittle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DosyagWpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="20"  x:Name="This" Tag="Default tag" Margin="1">
    <Grid>
        <Grid x:Name="ThisGrid" Tag="Название">
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="30"/>
                <ColumnDefinition Width="30" />
            </Grid.ColumnDefinitions>
            <TextBox FontSize="8" Text="{Binding ElementName=This, Path=DataContext, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=\{0:f1\}}" Grid.Column="1" Background="{x:Null}" />
            <Label FontSize="8" Content="{Binding ElementName= This, Path=Tag}"/>
        </Grid>
    </Grid>
</UserControl>

